<xlue>
	<control class="TitleCtrl">
		<attr_def>
		
		</attr_def>
		<method_def>
			<SetCaptionText file="TitleCtrl.xml.lua" func="SetCaptionText"/>
			<SetCaptionColor file="TitleCtrl.xml.lua" func="SetCaptionColor"/>
			<SetCaptionStyle file="TitleCtrl.xml.lua" func="SetCaptionStyle"/>
		</method_def>
		<event_def>
			
		</event_def>
		<objtemplate>
			<children>
				<obj id="TipCtrl.Bkg" class="TextureObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>29</height>
						<texture>GreenWall.Caption.Bkg</texture>
						<visible>false</visible>
					</attr>
					<children>
						<obj id="TipCtrl.Caption.ImgLogo" class="ImageObject">
							<attr>
								<left>16</left>
								<top>5</top>
								<width>20</width>
								<height>23</height>
								<image>GreenWall.Logo</image>
							</attr>
						</obj>
						<obj id="TipCtrl.Caption.Text" class="TextObject">
							<attr>
								<left>29+16</left>
								<top>0</top>
								<width>200</width>
								<height>father.height</height>
								<text>绿盾广告管家 - [ 去广告就这么任性 ]</text>
								<textcolor>B1B9C4</textcolor>
								<font>font.default12</font>
								<valign>center</valign>
							</attr>
						</obj>
						
						<obj id="TipCtrl.Caption.CloseBtn" class="TipAddin.Button">
							<attr>
								<left>father.width-25</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GreenWall.BtnClose.Normal</NormalBkgID>
								<DownBkgID>GreenWall.BtnClose.Down</DownBkgID>
								<HoverBkgID>GreenWall.BtnClose.Hover</HoverBkgID>
								<DisableBkgID>GreenWall.BtnClose.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickCloseBtn" />
							</eventlist>
						</obj>
						
						<obj id="TipCtrl.Caption.BtnMin" class="TipAddin.Button">
							<attr>
								<left>father.width-25*2</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GreenWall.BtnMin.Normal</NormalBkgID>
								<DownBkgID>GreenWall.BtnMin.Down</DownBkgID>
								<HoverBkgID>GreenWall.BtnMin.Hover</HoverBkgID>
								<DisableBkgID>GreenWall.BtnMin.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickMinBtn" />
							</eventlist>
						</obj>
						
						<obj id="TipCtrl.Caption.Config" class="TipAddin.Button">
							<attr>
								<left>father.width-25*3 - 3</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GreenWall.Config.Normal</NormalBkgID>
								<DownBkgID>GreenWall.Config.Down</DownBkgID>
								<HoverBkgID>GreenWall.Config.Hover</HoverBkgID>
								<DisableBkgID>GreenWall.Config.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickConfigBtn" />
							</eventlist>
						</obj>
						<obj id="TipCtrl.Caption.HomePage" class="TipAddin.Button">
							<attr>
								<left>father.width-25*4 - 5</left>
								<top>8</top>
								<width>14</width>
								<height>14</height>
								<NormalBkgID>GreenWall.Caption.HomePage.Normal</NormalBkgID>
								<DownBkgID>GreenWall.Caption.HomePage.Hover</DownBkgID>
								<HoverBkgID>GreenWall.Caption.HomePage.Hover</HoverBkgID>
								<DisableBkgID>GreenWall.Caption.HomePage.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickHomePage" />
							</eventlist>
						</obj>
						<obj id="TipCtrl.Caption.Share" class="TipAddin.Button">
							<attr>
								<left>father.width-25*4 - 7 - 13 - 29</left>
								<top>0</top>
								<width>29</width>
								<height>39</height>
								<NormalBkgID>GreenWall.Caption.Share.Normal</NormalBkgID>
								<DownBkgID>GreenWall.Caption.Share.Hover</DownBkgID>
								<HoverBkgID>GreenWall.Caption.Share.Hover</HoverBkgID>
								<DisableBkgID>GreenWall.Caption.Share.Normal</DisableBkgID>
							</attr>
							<eventlist>
								<event name="OnClick" file="TitleCtrl.xml.lua" func="OnClickShare" />
							</eventlist>
						</obj>
					</children>				
				</obj>
				<!--顶部阴影背景-->
				<obj id="TipCtrl.MainWnd.TopShadow" class="TextureObject">
					<attr>
						<left>0</left>
						<top>29</top>
						<width>father.width</width>
						<height>13</height>
						<texture>GreenWall.MainWnd.TopShadow</texture>
						<visible>false</visible>
						<zorder>2000</zorder>
					</attr>	
				</obj>			
			</children>
		</objtemplate>
	</control>
</xlue>