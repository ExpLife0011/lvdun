<xlue>
	<objtreetemplate id="FrameWndTree" class="ObjectTreeTemplate">
		<attr>
			<left>0</left>
			<top>0</top>
			<width>875</width>
			<height>515</height>
		</attr>
		<obj id="root" class="FillObject">
			<attr>
				<left>0</left>
				<top>0</top>
				<width>875</width>
				<height>515</height>
				<filltype>Monochrome</filltype>
				<srccolor>255,255,255,255</srccolor>
				<destcolor>255,255,255,255</destcolor>
			</attr>	
			<children>
				<obj id="TransparentMask" class="FillObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
						<filltype>Monochrome</filltype>
						<blendtype>Source</blendtype>
						<visible>0</visible>
					</attr>
				</obj>
				<!--退出全屏的按钮位于FrameWnd，故退出全屏在FrameWnd里处理-->
				<obj id="FrameWnd.CloseBtnWhileFullScreen" class="TipAddin.Button">
					<attr>
						<left>father.width-46</left>
						<top>0</top>
						<width>46</width>
						<height>46</height>
						<Visible>0</Visible>
						<zorder>9999</zorder>
						<NormalBkgID>bitmap.fullscreen.close.normal</NormalBkgID>
						<DownBkgID>bitmap.fullscreen.close.hover</DownBkgID>
						<HoverBkgID>bitmap.fullscreen.close.hover</HoverBkgID>
						<DisableBkgID>bitmap.fullscreen.close.normal</DisableBkgID>
					</attr>
					<eventlist>
						<event name="OnClick" file="FrameWnd.xml.lua" func="OnClickCloseBtnWhileFullScreen" />
					</eventlist>	
				</obj>
				<obj id="FrameWnd.ResizeFrameWndCtrl" class="ResizeFrameWndCtrl">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
					</attr>
				</obj>
				<!--全屏模式的按钮位于TitleCtrl，故进入全屏在TitleCtrl里处理-->
				<obj id="FrameWnd.TitleCtrl" class="TitleCtrl">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>30</height>
					</attr>
				</obj>
				<obj id="FrameWnd.ImageCtrl" class="ImageCtrl">
					<attr>
						<left>3</left>
						<top>30</top>
						<width>father.width - 6</width>
						<height>father.height - 33</height>
						<limitchild>1</limitchild>
					</attr>
				</obj>
			</children>
		</obj>
	</objtreetemplate>

    <hostwndtemplate id="FrameWnd" class="FrameHostWnd">
        <attr>
            <layered>1</layered>
            <left>0</left>
            <top>0</top>
            <width>875</width>
            <height>515</height>
            
            <topmost>0</topmost>
            <visible>1</visible>
            <enable>1</enable>
            <maxbox>1</maxbox>
            <minbox>1</minbox>
            <minwidth>50</minwidth>
            <minheight>50</minheight>
			<sysmenu>1</sysmenu>
			<appwindow>1</appwindow>
        </attr>
		 <eventlist>
            <event name="OnCreate" file="FrameWnd.xml.lua" func="OnCreate"/>
            <event name="OnShowWindow" file="FrameWnd.xml.lua" func="OnShowWindow"/>
			<event name="OnSize" >
				local self,_type,width,height = ...
				local objtree = self:GetBindUIObjectTree()
				local root = objtree:GetRootObject()
				root:SetObjPos(0,0,width,height)
			</event>
        </eventlist>
    </hostwndtemplate>

</xlue>
