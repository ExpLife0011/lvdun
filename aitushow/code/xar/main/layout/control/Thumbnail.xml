<xlue><!--缩略图控件-->
	<control class="Thumbnail">
		<attr_def>
		</attr_def>
		<method_def>
			<!--设置缩略图信息，包括缩略图句柄、原图路径、原图格式、原图大小等-->
			<SetData />
			<GetData />
			<GetIndex />
			<SetIndex /><!--设置索引，Thumbnail根据此信息计算自己在Container中的位置-->
			<Clear />
			<SetImage />
			<!--设置是否被选中-->
			<Select />	
		</method_def>
		<event_def>
			<OnTrySelect><!--点击缩略图控件时，发OnTrySelect，由缩略图Container决定是否Select(为了多选)-->
				<param>
					<bool /><!--当前的select状态！！！-->
				</param>
			</OnTrySelect>
		</event_def>
		<objtemplate>
			<children>
				<!-- 边框 -->
				<obj id="Background" class="FillObject">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>father.width</width>
						<height>father.height</height>
						<srccolor>100,66,57,255</srccolor>
						<destcolor>100,66,57,255</destcolor>
					</attr>
					<children>
						<obj id="SourcePicExt" class="FillObject">
							<attr>
								<left>father.width - 29</left>
								<top>0</top>
								<width>29</width>
								<height>15</height>
								<srccolor>73,165,230,255</srccolor>
								<destcolor>73,165,230,255</destcolor>
								<zorder>9999</zorder>
							</attr>
							<children>
								<obj id="ExtText" class="TextObject">
									<attr>
										<left>0</left>
										<top>-1</top>
										<width>father.width</width>
										<height>father.height</height>
										<font>basecontrol.defaultfont.12</font>
										<textcolor>basecontrol.white</textcolor>
										<halign>center</halign>
										<valign>center</valign>
										<text>ext</text>
									</attr>
								</obj>
							</children>
						</obj>
						<obj id="Image" class="ImageObject">
							<attr>
								<left>2</left>
								<top>2</top>
								<valign>center</valign>
								<halign>center</halign>
								<zorder>99</zorder>
								<drawmode>1</drawmode>
								<width>father.width - 4</width>
								<height>father.height - 4 - 2 - 15</height>
							</attr>
							<eventlist>
								<event name="OnLButtonUp" />
							</eventlist>
						</obj>
						<obj id="FileName" class="TextObject">
							<attr>
								<left>2</left>
								<top>father.height - 15</top>
								<width>father.width - 4</width>
								<height>15</height>
								<zorder>9999</zorder>
								<font>basecontrol.defaultfont.12</font>
								<textcolor>basecontrol.white</textcolor>
								<halign>center</halign>
								<valign>top</valign>
								<text>filename</text>
							</attr>
						</obj>
					</children>
				</obj>
			</children>
			<eventlist>
				<event name="OnInitControl" />
			</eventlist>
		</objtemplate>
	</control>
</xlue>